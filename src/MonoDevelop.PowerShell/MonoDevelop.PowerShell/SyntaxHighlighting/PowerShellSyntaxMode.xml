<SyntaxMode name="PowerShell" mimeTypes="application/powershell;application/powershell-module;application/powershell-manifest">

	<Property name="LineComment">#</Property>
	<Property name="BlockCommentStart">&lt;*</Property>
	<Property name="BlockCommentEnd">*&gt;</Property>
	<Property name="StringQuote">"</Property>
	<Property name="StringQuote">'</Property>

	<EolSpan color="Comment(Line)" tagColor="Comment(Line)">#</EolSpan>
	
	<Span color="Comment(Block)" tagColor="Comment(Line)">
		<Begin>&lt;*</Begin>
		<End>*&gt;</End>
	</Span>
	
	<Span color="Script String" stopateol="true" escape='\'>
		<Begin>"</Begin>
		<End>"</End>
	</Span>

	<Span color="Script String" stopateol="true" escape='\'>
		<Begin>&apos;</Begin>
		<End>&apos;</End>
	</Span>

	<Span color="String(C# @ Verbatim)" rule="VerbatimString" stopateol="false" escape='""'>
		<Begin>@"</Begin>
		<End>"@</End>
	</Span>

	<Span color="String(C# @ Verbatim)" rule="VerbatimString" stopateol="false" escape="''">
		<Begin>@'</Begin>
		<End>'@</End>
	</Span>

	<Match color="Script Number">CSharpNumber</Match>

	<Match color="User Method Declaration">\b(\w+-\w+)\b</Match>

	<Match color="User Types">\$\w+</Match>

	<Match color="Keyword(Constants)" ignorecase="true">\$(true|false|null)</Match>

	<Keywords color="Keyword(Selection)" ignorecase="true">
		<Word>else</Word>
		<Word>elseif</Word>
		<Word>if</Word>
		<Word>switch</Word>
		<Word>where</Word>
	</Keywords>

	<Keywords color="Keyword(Iteration)" ignorecase="true">
		<Word>do</Word>
		<Word>for</Word>
		<Word>foreach</Word>
		<Word>in</Word>
		<Word>until</Word>
		<Word>while</Word>
	</Keywords>

	<Keywords color="Keyword(Jump)" ignorecase="true">
		<Word>break</Word>
		<Word>continue</Word>
		<Word>return</Word>
		<Word>exit</Word>
	</Keywords>

	<Keywords color="Keyword(Exception)" ignorecase="true">
		<Word>try</Word>
		<Word>throw</Word>
		<Word>catch</Word>
		<Word>finally</Word>
		<Word>trap</Word>
	</Keywords>

	<Keywords color="Keyword(Other)" ignorecase="true">
		<Word>begin</Word>
		<Word>data</Word>
		<Word>dynamicparam</Word>
		<Word>end</Word>
		<Word>filter</Word>
		<Word>from</Word>
		<Word>function</Word>
		<Word>hidden</Word>
		<Word>inlinescript</Word>
		<Word>parallel</Word>
		<Word>param</Word>
		<Word>process</Word>
		<Word>sequence</Word>
		<Word>workflow</Word>
		<Word>using</Word>
		<Word>var</Word>
	</Keywords>

	<Rule name="VerbatimString">
		<Match color="String(Escape)">""</Match>
	</Rule>
</SyntaxMode>
